<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout android:id="@+id/frameHomeScreenTwo"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView android:id="@+id/imageUnion"
            android:layout_gravity="bottom|start"
            android:layout_height="@dimen/_891pxv"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="match_parent"
            android:scaleType="fitXY" android:src="@drawable/img_union"
            tools:ignore="ContentDescription" tools:src="@drawable/img_union"/>
        <LinearLayout android:id="@+id/linearColumnrectangletwentynine"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_45pxv"
            android:layout_marginEnd="@dimen/_133pxh"
            android:layout_marginStart="@dimen/_133pxh"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent" android:orientation="vertical">

            <ImageView android:gravity="center_horizontal"
                android:id="@+id/imageBack"
                android:layout_height="@dimen/_100pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_rectangle29"
                tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle29"/>

            <TextView
                android:id="@+id/txtTermsofPlay"
                style="@style/txtCinzelromanbold16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14pxv"
                android:ellipsize="end"
                android:gravity="start"
                android:lineSpacingExtra="@dimen/_6pxh"
                android:singleLine="true"
                android:text="Anime Quotes"
                tools:text="@string/lbl_terms_of_play" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollViewScrollview"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_8pxh"
            android:clipToPadding="false"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/linearColumnquestionformat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/quote_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="............"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    style="@style/txtCinzelromanbold24"
                    tools:text="Here the quote will be displayed" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quote_tv"
                    tools:text="Easy tuto"
                    style="@style/txtAnybodylight14"
                    android:textColor="#AEAEAE"
                    android:layout_marginTop="16dp"
                    android:id="@+id/character_tv"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_tv"
                    tools:text="Easy tuto"
                    style="@style/txtAnybodylight14"
                    android:textColor="#AEAEAE"
                    android:layout_marginTop="16dp"
                    android:id="@+id/anime_tv"
                    android:textSize="18sp"
                    android:gravity="center"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/next_btn"
                    style="@style/btnSolidRounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_37pxv"
                    android:layout_marginBottom="30dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_6pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_12pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_12pxv"
                    android:singleLine="true"
                    android:text="Next"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_i_understand" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/progress_bar"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
        <View android:background="@color/deep_orange_300"
            android:id="@+id/lineLineThree"
            android:layout_gravity="top|start"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginTop="170dp"
            android:layout_width="@dimen/_390pxh"/>
    </FrameLayout>

</layout>











