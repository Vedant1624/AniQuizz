<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_profile">


    <LinearLayout
        android:id="@+id/linearEditProile"
        style="@style/groupStylewhite_A700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_40pxv"
            android:layout_marginEnd="@dimen/_20pxh"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:id="@+id/linearRowarrowleft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnback"
                    android:layout_width="@dimen/_40pxh"
                    android:layout_height="@dimen/_40pxh"
                    android:background="@drawable/rectangle_bg_black_900_63_radius_10"
                    android:paddingHorizontal="@dimen/_14pxh"
                    android:paddingVertical="@dimen/_14pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_arrowleft"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtEditProile"
                    style="@style/txtAnybodyregular18_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_marginBottom="@dimen/_13pxv"
                    android:layout_weight="0.69"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Edit Profile" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/imgMainAvatar"
            android:layout_width="@dimen/_100pxh"
            android:layout_height="@dimen/_100pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/_20pxh"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            app:srcCompat="@drawable/img_rectangle10" />

        <TextView android:ellipsize="end"
            android:id="@+id/txtSelectAvatar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_27pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/lbl_select_avatar"
            style="@style/txtAnybodyregular14_2" tools:text="@string/lbl_select_avatar"/>
        <HorizontalScrollView android:fillViewport="true"
            android:gravity="end"
            android:id="@+id/horizontalScrollHorizontalscrollrectanglefourteen"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_width="match_parent" android:scrollbars="none">
            <LinearLayout android:id="@+id/linearRowrectanglefourteen"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imgAvatar1"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_width="@dimen/_60pxh"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_rectangle14"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle14"/>
                <ImageView android:id="@+id/imgAvatar2"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_width="@dimen/_60pxh"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_rectangle15"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle15"/>
                <ImageView android:id="@+id/imgAvatar3"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_width="@dimen/_60pxh"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_rectangle17"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle17"/>
                <ImageView android:id="@+id/imgAvatar4"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_width="@dimen/_60pxh"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_rectangle16"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_rectangle16"/>
                <ImageView android:id="@+id/imgAvatar5"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_width="@dimen/_60pxh"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_rectangle18"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle18"/>
                <ImageView android:id="@+id/imgAvatar6"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_width="@dimen/_60pxh"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_rectangle19"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle19"/>
                <ImageView android:id="@+id/imgAvatar7"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_width="@dimen/_60pxh"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_rectangle21_60x60"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle21_60x60"/>
                <ImageView android:id="@+id/imgAvatar8"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_width="@dimen/_60pxh"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_rectangle20"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle20"/>
                <ImageView android:id="@+id/imgAvatar9"
                    android:layout_height="@dimen/_60pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_width="@dimen/_60pxh"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_rectangle19_60x60"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_rectangle19_60x60"/>
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:id="@+id/lineLineFour"
            android:layout_width="@dimen/_390pxh"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginTop="@dimen/_27pxv"
            android:background="@color/gray_300" />

        <TextView
            android:id="@+id/txtYourName"
            style="@style/txtAnybodyregular12_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_marginEnd="@dimen/_20pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="User Name"
          />

        <TextView
            android:id="@+id/edUserName"
            style="@style/etSolidRounded_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:background="@drawable/rectangle_bg_gray_100_radius_10"
            android:ellipsize="end"
            android:hint="Vedant Chavan"
            android:inputType="text"
            android:paddingStart="@dimen/_12pxh"
            android:paddingTop="@dimen/_14pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_16pxv"
            android:singleLine="true"
            android:textColorHint="@color/black_900"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/txtUserName"
            style="@style/txtAnybodyregular12_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_marginEnd="@dimen/_20pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Email"
             />

        <TextView
            android:id="@+id/edEmail"
            style="@style/etSolidRounded_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:background="@drawable/rectangle_bg_gray_100_radius_10"
            android:ellipsize="end"
            android:hint="vedant16"
            android:inputType="text"
            android:paddingStart="@dimen/_12pxh"
            android:paddingTop="@dimen/_14pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_16pxv"
            android:singleLine="true"
            android:textColorHint="@color/black_900"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/txtPassword"
            style="@style/txtAnybodyregular12_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_marginEnd="@dimen/_20pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Password"
            />

        <EditText
            android:id="@+id/edOldPassword"
            style="@style/etSolidRounded_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="********"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:background="@drawable/rectangle_bg_gray_100_radius_10"
            android:ellipsize="end"
            android:inputType="text"
            android:paddingStart="@dimen/_12pxh"
            android:paddingTop="@dimen/_14pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_16pxv"
            android:singleLine="true"
            android:textColorHint="@color/black_900"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/txtConfirmPasswor"
            style="@style/txtAnybodyregular12_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_17pxv"
            android:layout_marginEnd="@dimen/_20pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Confirm Password"
             />

        <EditText
            android:id="@+id/edNewPassword"
            style="@style/etSolidRounded_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="********"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:background="@drawable/rectangle_bg_gray_100_radius_10"
            android:ellipsize="end"
            android:inputType="text"
            android:paddingStart="@dimen/_12pxh"
            android:paddingTop="@dimen/_14pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_16pxv"
            android:singleLine="true"
            android:textColorHint="@color/black_900"
            tools:ignore="Autofill" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            style="@style/btnSolidRounded"
            android:layout_width="@dimen/_171pxh"
            android:layout_height="@dimen/_44pxv"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_39pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginBottom="@dimen/_20pxv"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_1pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_14pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_14pxv"
            android:singleLine="true"
            android:text="save"
            android:textAllCaps="false"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>